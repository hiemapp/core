{
    "include": ["src/", "@types/"],
    "exclude": ["**/ui/components/**.ts"],
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@types/",
            "src/@types/"
        ],
        "moduleResolution": "node",
        "target": "es2021",
        "lib": ["es2021"],
        "outDir": "dist/",
        "rootDir": "src/",
        "module": "commonjs",
        "skipLibCheck": true,
        "strict": true,
        "declaration": true,
        "strictPropertyInitialization": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "jsx": "react",
        "jsxFactory": "jsx.h",
        "paths": {
            "~/*": ["src/*"],
            "~types/*": ["@types/*"],
            "~types": ["@types"]
        }
    }
}